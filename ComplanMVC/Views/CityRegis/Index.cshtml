@model ComplanMVC.EntityFrameworkModelClass.CityMaster

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/CompMaster.cshtml";
}
<script type="text/javascript">
    function JSviewbyid() {
        if ($("#ddlstate").val() == "-1") {
            alert("Please choose state");
            return false;
        }
        $("#StateId").val($('#ddlstate').val());
    }
</script>
<div>
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">City Registration</h1>
        </div>
    </div>

    <div class="row">
        <div class="panel-body">
            <div class="row">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <table class="table table-bordered" style="width: 800px;">
                        <tr>
                            <td>Country Name
                            </td>
                            <td>
                                <input id="txtcountryname" type="text" disabled class="form-control" value="India" style="width: 200px;" />
                            </td>
                        </tr>
                        <tr>
                            <td>State
                            </td>
                            <td>
                                @Html.DropDownList("State", ViewBag.Statelists as List<SelectListItem>, new { @id = "ddlstate", @class = "myClass1", style = "width: 200px;" })

                                @Html.HiddenFor(m => m.StateId)
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="text-align: center;">
                                <input id="btnsave" class="btn btn-success" type="submit" name="Save" value="Save" onclick="return validatepwd();" />
                                &nbsp;
                                <input id="btnview" type="submit" class="btn btn-warning" name="Viewshow" value="View" onclick="return JSviewbyid();" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                @Html.Partial("~/Views/CityRegis/CityRegisPartialView.cshtml")
                            </td>
                        </tr>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
