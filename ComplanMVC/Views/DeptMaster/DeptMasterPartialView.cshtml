@*@model ComplanMVC.EntityFrameworkModelClass.DepartmentMaster*@
@model ComplanMVC.Models.CommonViewClass

@if (ViewBag.DeptName != null)
{
    if (ViewBag.DeptName != null && ViewBag.DeptName.Count > 0)
    { 
    <table class="table table-bordered" style="width: 800px;">
        <tr style="background-color: #a94442; font-weight: bold; color: white;">
            <th>Sl No
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptHead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptHeadSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StateName)
            </th>
            <th>Action  
            </th>
        </tr>
        @* @foreach (var item in (IEnumerable<ComplanMVC.EntityFrameworkModelClass.DepartmentMaster>)ViewBag.DeptName)
    {  
        *@

        @{ 
        int a = 0;
        decimal sumsalary = 0;
        }
        @foreach (var item in (IEnumerable<ComplanMVC.Models.CommonViewClass>)ViewBag.DeptName)
        {
            <tr>
                <td>
                    @(a = a + 1)
                    <span style="display: none;">@(sumsalary = sumsalary + (decimal)item.DeptHeadSalary)</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptHead)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptHeadSalary)
                </td>
                <td>
                    @*  @Html.DisplayFor(modelItem => item.StateName)*@
                    <a href="javascript:void(0);" class="anchorDetail" onclick="JSStateDetails(@item.StateId);">@item.StateName</a>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.DeptId }, new { onclick = "return JSEdit('" + item.DeptId + "','" + item.DeptName + "','" + item.DeptDescription + "','" + item.DeptHead + "','" + item.DeptHeadSalary + "','" + item.StateId + "');" }) |  
                    @Html.ActionLink("Delete", "Delete", new { id = item.DeptId }, new { onclick = "return DeleteConfirm('" + item.DeptName + "');" }
                   )
                </td>
            </tr>  
        }
        <tr style="background-color: #ffcccc; font-weight: bold;">
            <td colspan="5">Total
            </td>
            <td>
                @sumsalary
            </td>
            <td colspan="2"></td>
        </tr>

    </table>
    }
    else
    {
    <table class="table table-bordered" style="width: 800px;">
        <tr style="font-weight: bold; color: blue; text-align: center;">
            <td>Sorry No records found
            </td>
        </tr>
    </table>
    }
}
else
{
    <table class="table table-bordered" style="width: 800px;">
        <tr style="font-weight: bold; color: blue;">
            <td>Sorry No records found
            </td>
        </tr>
    </table>
   
}
